<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'd-flex border-1 p-1') do |f| %>
  <div class="nav bg-main d-flex justify-content-between align-items-center p-2">
    <%= link_to '< Back', root_path, class: "text-white m-0 border-0 text-decoration-none" %>
    <h5 class='text-white m-0'>REGISTER</h5>
    <%= f.submit "Next", class: 'bg-transparent text-white m-0 border-0' %>
  </div>


  <div class="mt-3 d-flex flex-column mx-1 border border-1">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', class: 'border-0 border-bottom p-2' %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border-0 border-bottom p-2' %>

    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'border-0 border-bottom p-2' %>

    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Confirm password', class: 'border-0 p-2' %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'd-flex border-1 p-1') do |f| %>
  <div class="nav bg-main d-flex justify-content-between align-items-center p-2">
    <%= link_to '< Back', root_path, class: "text-white m-0 border-0 text-decoration-none" %>
    <h5 class='text-white m-0'>LOGIN</h5>
    <%= f.submit "Log in", class: 'bg-transparent text-white m-0 border-0' %>
  </div>


  <div class="mt-3 mx-2 border d-flex flex-column">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border-0 border-bottom p-2' %>

    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'border-0 border-bottom p-2' %>
  </div>
<% end %>
<div class="mt-3 mx-2 d-flex flex-column">
  <%= link_to 'Forgot password?', new_user_password_path, class: 'text-decoration-none text-4 w-100 text-center small' %>
</div>
